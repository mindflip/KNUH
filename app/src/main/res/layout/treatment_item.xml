<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center"
            android:text="진료과"
            android:textColor="@color/menu_black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center"
            android:text="처방일"
            android:textColor="@color/menu_black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center"
            android:text="약품명"
            android:textColor="@color/menu_black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center"
            android:text="용법"
            android:textColor="@color/menu_black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center"
            android:text="효과"
            android:textColor="@color/menu_black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center"
            android:text="주의사항"
            android:textColor="@color/menu_black"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/tvPrescListDept"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_vertical"
            android:text="테스트"
            android:textColor="@color/color_bmenu2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvPrescListDate"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_vertical"
            android:text="테스트"
            android:textColor="@color/menu_black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvPrescListMed"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_vertical"
            android:text="테스트"
            android:textColor="@color/menu_black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvPrescListUsg"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_vertical"
            android:text="테스트"
            android:textColor="@color/menu_black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvPrescListEff"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_vertical"
            android:text="테스트"
            android:textColor="@color/menu_black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvPrescListDan"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_vertical"
            android:text="테스트"
            android:textColor="@color/menu_black"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>
