<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChangecarnumActivity">

    <TextView
        android:id="@+id/tvCarTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="현재 차량번호"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/tvCarNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="10가 8014"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_marginBottom="100dp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/etChangeCarNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:ems="10"
        android:hint="변경할 차량번호"
        android:inputType="textPersonName"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btChaneCarNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="차량번호 변경"
        android:layout_gravity="center"/>
</LinearLayout>